{% extends ':admin:base.html.twig' %}

{% block title %}Register New Chub{% endblock %}

{% block body %}
    <div id="wrapper">

        <!-- Navigation -->
        {% include ':includes:menu-admin.html.twig' %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Register New Chub</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.user) }}
                                {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.register, { 'attr': {'class': 'btn btn-success'} }) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}