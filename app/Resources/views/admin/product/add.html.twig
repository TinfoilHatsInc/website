{% extends ':admin:base.html.twig' %}

{% block title %}Add Product{% endblock %}

{% block body %}
    <div id="wrapper">

        <!-- Navigation -->
        {% include ':includes:menu-admin.html.twig' %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Add Product</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        {#<div class="panel-heading">#}
                        {#DataTables Advanced Tables#}
                        {#</div>#}
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.price) }}
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-eur"></i>
                                    </span>
                                    {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.imageFile) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.iconFile) }}
                            </div>
                            <div class="form-group">
                                <label>Features</label>
                                <ul style="list-style: none" class="features" data-prototype="{{ form_widget(form.features.vars.prototype)|e('html_attr') }}">
                                    {{ form_widget(form.features) }}
                                </ul>
                            </div>
                            {{ form_widget(form.features) }}
                            <div class="form-group">
                                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}

{% block js_bottom %}
<script type="text/javascript">
    var $collectionHolder;

    // setup an "add a tag" link
    var $addFeatureLink = $('<a href="#" class="add_feature_link">Add a tag</a>');
    var $newLinkLi = $('<li></li>').append($addFeatureLink);

    jQuery(document).ready(function() {
        // Get the ul that holds the collection of tags
        $collectionHolder = $('ul.features');

        // add the "add a tag" anchor and li to the tags ul
        $collectionHolder.append($newLinkLi);

        // count the current form inputs we have (e.g. 2), use that as the new
        // index when inserting a new item (e.g. 2)
        $collectionHolder.data('index', $collectionHolder.find(':input').length);

        $addFeatureLink.on('click', function(e) {
            // prevent the link from creating a "#" on the URL
            e.preventDefault();

            // add a new tag form (see next code block)
            addFeatureForm($collectionHolder, $newLinkLi);
        });
    });

    function addFeatureForm($collectionHolder, $newLinkLi) {
        // Get the data-prototype explained earlier
        var prototype = $collectionHolder.data('prototype');

        // get the new index
        var index = $collectionHolder.data('index');

        // Replace '$$name$$' in the prototype's HTML to
        // instead be a number based on how many items we have
        var newForm = prototype.replace(/__name__/g, index);

        // increase the index with one for the next item
        $collectionHolder.data('index', index + 1);

        // Display the form in the page in an li, before the "Add a tag" link li
        var $newFormLi = $('<li></li>').append(newForm);

        // also add a remove button, just for this example
        $newFormLi.append('<a href="#" class="remove-feature">x</a>');

        $newLinkLi.before($newFormLi);

        // handle the removal, just for this example
        $('.remove-feature').click(function(e) {
            e.preventDefault();

            $(this).parent().remove();

            return false;
        });
    }
</script>
{% endblock %}