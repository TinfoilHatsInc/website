{% extends ':admin:base.html.twig' %}

{% block title %}Edit {{ product.name }}{% endblock %}

{% block body %}
    <div id="wrapper">

        <!-- Navigation -->
        {% include ':includes:menu-admin.html.twig' %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Edit {{ product.name }}</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        {#<div class="panel-heading">#}
                        {#DataTables Advanced Tables#}
                        {#</div>#}
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.price) }}
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-eur"></i>
                                    </span>
                                    {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.imageFile) }}
                                <img id="product-img" src="{{ vich_uploader_asset(product, 'imageFile') }}" class="img-fluid" style="width: 50px" alt="">
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.iconFile) }}
                                <img id="product-img" src="{{ vich_uploader_asset(product, 'iconFile') }}" class="img-fluid" style="width: 30px" alt="">
                            </div>
                            <div class="form-group">
                                <label>Features</label>
                                <ul style="list-style: none" class="features" data-prototype="{{ form_widget(form.features.vars.prototype)|e('html_attr') }}">
                                    {% for feature in form.features %}
                                        <li>
                                            {{ form_widget(feature.name) }}
                                            {{ form_widget(feature.imageFile) }}
                                        </li>
                                        <hr>
                                    {% endfor %}
                                </ul>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}

{% block js_bottom %}
    <script type="text/javascript" src="{{ asset('assets/js/features.js') }}"></script>
{% endblock %}