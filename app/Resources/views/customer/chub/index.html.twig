{% extends ':customer:base.html.twig' %}

{% block title %}Central Hubs{% endblock %}

{% block stylesheets_header %}
    <!-- DataTables CSS -->
    <link href="{{ asset('assets/vendor/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="{{ asset('assets/vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="wrapper">
        {% include ':includes:menu-customer.html.twig' %}
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Central Hubs</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-hover" id="dataTables-chubs">
                                <thead>
                                <tr>
                                    <th>Chub</th>
                                    <th>Alarm Status</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for chub in chubs %}
                                    <tr class="{% if loop.index0 % 2 == 0 %}even{% else %}odd{% endif %} {% if chub.alarmEnabled %}danger{% endif %}" style="cursor: pointer">
                                        <td>{{ chub.id }} {% if chub.alias %}({{ chub.alias }}){% endif %}</td>
                                        <td>{% if chub.alarmEnabled %}On{% else %}Off{% endif %}</td>
                                        <td>
                                            <a href="{{ path('customer_chubs_show', {'id': chub.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fa fa-eye fa-fw" aria-hidden="true"></i>
                                            </a>
                                            <a href="{{ path('customer_chubs_edit', {'id': chub.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

        </div>
    </div>
    <!-- /#page-wrapper -->
{% endblock %}

{% block js_bottom %}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('assets/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/datatables-responsive/dataTables.responsive.js') }}"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#dataTables-chubs').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
