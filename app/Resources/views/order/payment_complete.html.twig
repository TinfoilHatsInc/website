{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include ':includes:menu-default.html.twig' %}

    <header class="masthead">
        <div class="overlay-small">
            <div class="container">
                <h1 class="display-1 text-white">Thanks for your purchase</h1>
            </div>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="d-flex justify-content-center">
                <div class="p-5">
                    <h2 class="display-4">It will be shipped soon</h2>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 order-1">
                    <div class="p-5">
                        <p>You can check the order status in your account</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr noshade>
    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8 order-1">
                    <div class="p-5">
                        <h2 class="display-5">Products</h2>
                        <table width="100%" class="table table-striped table-hover">
                            <tbody>
                            {% for product in order.products %}
                                <tr style="cursor: pointer">
                                    <td>image</td>
                                    <td>{{ product.name }}</td>
                                    <td>&euro; {{ product.price / 100 }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="p-5">
                        <h2 class="display-5">Shipping Details</h2>
                        <address>
                            <strong>{{ order.user.firstName }} {{  order.user.lastName }}</strong><br>
                            {{ order.country.name|capitalize }}<br>
                            {{ order.city }}, {{ order.zipcode }}<br>
                            (123) 456-7890
                        </address>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Tinfoil Hats, inc <script>document.write(new Date().getFullYear())</script></p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('assets/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}