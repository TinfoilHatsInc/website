{% extends 'base.html.twig' %}

{% block title %}Edit Password{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include ':includes:menu-default.html.twig' %}

    <header class="masthead">
        <div class="overlay-small">
            <div class="container">
                <h1 class="display-1 text-white">Edit Password</h1>
            </div>
        </div>
    </header>
    <hr noshade>

    {% if error is defined %}
        <section>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8 order-1">
                        <div class="p-5">
                            <p class="text-danger">{{ error }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr noshade>
    {% endif %}

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8 order-1">
                    <div class="p-5">
                        <h2 class="display-5">New Password</h2>
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.oldPassword) }}
                                {{ form_widget(form.oldPassword, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.plainPassword) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% include ':includes:footer.html.twig' %}

    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('assets/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}