{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include ':includes:menu-default.html.twig' %}

    <header class="masthead">
        <div class="overlay-small">
            <div class="container">
                <h1 class="display-1 text-white">My Profile</h1>
            </div>
        </div>
    </header>
    <hr noshade>
    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8 order-1">
                    <div class="p-5">
                        <h2 class="display-5">Shipping Details</h2>
                        <address>
                            <strong>{{ user.firstName }} {{  user.lastName }}</strong><br>
                            {% if user.address %}
                                {{ user.address.country.name|capitalize }}<br>
                                {{ user.address.street }} {{ user.address.houseNumber }}<br>
                                {{ user.address.city }}, {{ user.address.zipcode }}<br>
                            {% else %}
                                <a href="#" class="btn btn-success">Set your shipping details</a>
                            {% endif %}
                            {{ user.phoneNumber }}
                        </address>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr noshade>
    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8 order-1">
                    <div class="p-5">
                        <h2 class="display-5">Most Recent Order</h2>

                    </div>
                </div>
            </div>
        </div>
    </section>

    {% include ':includes:footer.html.twig' %}

    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('assets/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}